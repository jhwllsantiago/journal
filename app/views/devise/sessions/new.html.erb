<div class="container container-400 mt-auto mb-auto">
  <h2 class="mb-5 mt-3 text-center">Login to <span class=" fst-italic">Journally</span></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-3" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-label" %>
      </div>
    <% end %>

    <div class="d-grid mt-3">
      <%= f.submit "Submit", class: "btn btn-outline-success btn-block"%>
    </div>
  <% end %>

  <%# render "devise/shared/links" %>
</div>